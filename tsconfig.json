{
    "compilerOptions": {
      "skipLibCheck": true,
      "target": "ES2022",
      "module": "ES2022",
      "rootDir": "src",
      "outDir": "dist",
      "sourceMap": true,
      // "resolveJsonModule": true,
      "lib": ["ES2022", "dom"],
      "esModuleInterop": true,
      "types": ["node"],
      "moduleResolution": "Bundler"
    },
    "include": ["src/**/*.ts"],
    "exclude": [
      "node_modules",
      "./node_modules",
      "./node_modules/*",
      "./node_modules/@types/node/index.d.ts"
    ]
  }
